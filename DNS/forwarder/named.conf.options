acl internalIp{
  172.20.10.0/24;
  172.20.11.0/24;
  172.20.12.0/24;
  172.20.13.0/24;
  172.20.14.0/24;
  172.20.15.0/24;
  172.20.16.0/24;
  172.20.17.0/24;
  172.20.18.0/24;
  172.20.19.0/24;
  172.20.20.0/24;
  localhost;
  localnets;
};

options {
    directory "/var/cache/bind";

    recursion yes;

    version none;

    forwarders {
              172.20.0.2;
    };

    allow-query {internalIp;};
    forward only;

    dnssec-validation auto;
    auth-nxdomain no;    # conform to RFC1035
    listen-on-v6{any; };
};
